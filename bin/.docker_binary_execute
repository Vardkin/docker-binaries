#!/bin/bash

IMAGE_TAG_VERSION=${IMAGE_TAG_VERSION:=latest}

docker run -it \
 -v ${HOME}:${HOME} \
 -v ${HOME}:/root \
 -v ${PWD}:${PWD} \
 -v /tmp/:/tmp/ \
 -w ${PWD} \
 -p 80:80 \
 -p 3000:3000 \
 -p 3306:3306 \
 -p 3307:3307 \
 -p 3308:3308 \
 -p 8000:8000 \
 -p 8001:8001 \
 -p 8002:8002 \
 -p 8080:8080 \
 -p 9000:9000 \
 --sig-proxy=true \
 --pid=host \
 --rm \
 ${IMAGE_NAME}:${IMAGE_TAG_VERSION} \
 ${COMMAND_TO_EXECUTE} \
 $@