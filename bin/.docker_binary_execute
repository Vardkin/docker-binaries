#!/bin/sh
#set -x #echo on # DEBUG
set -e

IMAGE_TAG_VERSION=${IMAGE_TAG_VERSION:=latest}

docker run -it \
 -v ${HOME}:${HOME} \
 -v ${HOME}:/root \
 -v ${PWD}:${PWD} \
 -v /tmp/:/tmp/ \
 -w ${PWD} \
 --user=$(id -u) \
 --net=host \
 --sig-proxy=true \
 --pid=host \
 --rm \
 ${IMAGE_NAME}:${IMAGE_TAG_VERSION} \
 ${COMMAND_TO_EXECUTE} \
 $@
